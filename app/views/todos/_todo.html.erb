<div id="<%= dom_id todo %>" data-sortable-update-url="<%= todo_path(todo) %>" class="border border-2 border-gray-200 m-2 p-2">
  <p class="my-5">
    <strong class="block font-medium mb-1">Title:</strong>
    <%= todo.title %>
  </p>

  <p class="my-5">
    <%= todo.content %>
  </p>

  <p class="my-5">
    <%= todo.position %>
  </p>

  <% if action_name != "show" %>
    <%= link_to "Show this todo", todo, class: "rounded-lg py-3 px-5 bg-gray-100 inline-block font-medium" %>
    <%= link_to "Edit this todo", edit_todo_path(todo), class: "rounded-lg py-3 ml-2 px-5 bg-gray-100 inline-block font-medium" %>
  <% end %>
</div>
